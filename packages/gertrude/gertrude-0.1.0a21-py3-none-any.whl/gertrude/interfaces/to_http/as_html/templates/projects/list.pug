extends layout

block title
  title= _("pages-projects-list-title")

block content
  section.section
    .container
      .is-pulled-right
        a.button.is-link(
          hx-get=url_for("projects.create_form")
          hx-target="#modal"
        )
          span.icon.is-small: i.fas.fa-plus(aria-hidden="true")
          span= _("pages-projects-list-new")

      h1.title= _("pages-projects-list-title")

      block list
        #list.box(
          hx-trigger="ProjectCreated from:body"
          hx-get=url_for("projects.index_list")
          hx-swap="outerHTML settle:0.5s"
          style="padding: 0"
        )
          if projects
            ul.list-of-projects
              each project in projects
                li: a(href=url_for("projects.display", id=project.id))
                  if project.short_name
                    span.project-tag= project.short_name
                  span= project.name
          else
            article.message.is-info
              .message-body: p= _("pages-projects-list-empty")
