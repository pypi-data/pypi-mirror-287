form(hx-post=url_for("tasks.schedule", id=task.id))
  input(type="hidden" name="csrf_token" value=generate_csrf_token())

  if errors.task_id
    article.message.is-danger
      p.message-body #[code task_id] #{errors.task_id}

  .field.is-grouped
    - var classes = "is-danger" if errors.date else ""
    .control.is-expanded
      input.input(
        class=classes
        type="date"
        name="date"
        value=values.date
        min=min_date
      )
      if errors.date
        p.help.is-danger= errors.date
      p.help= _("pages-tasks-schedule-date-help")
    .control: button.button.is-info(
      _="on click set the (value of the previous <input/>) to '#{next_week}' then halt"
    )= _("pages-tasks-schedule-next-week")
    .control: button.button.is-info(
      _="on click set the (value of the previous <input/>) to '#{next_month}' then halt"
    )= _("pages-tasks-schedule-next-month")

  .field.is-grouped
    .control: button.button.is-success(type="submit")
      span.icon: i.fas.fa-calendar(aria-hidden="true")
      span= _("pages-tasks-schedule-submit")
    .control
      a.button(hx-get=url_for("tasks.display_actions", id=task.id))
        span.icon: i.fas.fa-ban(aria-hidden="true")
        span= _("pages-tasks-schedule-cancel")
