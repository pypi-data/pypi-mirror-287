extends layout

block title
  title= _("pages-tasks-root-title")

block content
  section.section.gtd-workflow: .container: .content
      h1= _("pages-tasks-root-title")
      h2= _("pages-tasks-root-subtitle")
      p!= _("pages-tasks-root-introduction-html")

      h3
        span.icon: i.fas.fa-edit(aria-hidden="true")
        span.ml-2= _("pages-tasks-root-capture-title")
      p!= _("pages-tasks-root-capture-description-html")

      h3
        span.icon: i.fas.fa-inbox(aria-hidden="true")
        span.ml-2= _("pages-tasks-root-clarify-title")
      p!= _("pages-tasks-root-clarify-description-html")

      h3
        span.icon: i.fas.fa-folder-open(aria-hidden="true")
        span.ml-2= _("pages-tasks-root-organize-title")
      p!= _("pages-tasks-root-organize-description-html")

      h3
        span.icon: i.fas.fa-brain(aria-hidden="true")
        span.ml-2= _("pages-tasks-root-reflect-title")
      p!= _("pages-tasks-root-reflect-description-html")

      h3
        span.icon: i.fas.fa-thumbs-up(aria-hidden="true")
        span.ml-2= _("pages-tasks-root-engage-title")
      p!= _("pages-tasks-root-engage-description-html")
