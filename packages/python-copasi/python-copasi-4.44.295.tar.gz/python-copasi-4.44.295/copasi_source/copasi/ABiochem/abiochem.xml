<!-- 
    This file contains the specification of the ABiochem command line for processing with clo++
-->
<cloxx>
    <config>
	<autohelp/>
    </config>

    <options>
	<option id="total" type="int" default="10">
            <range min="1"/>
	    <name>total</name>
	    <name>t</name>
	    <comment>the total number of networks to generate</comment>
	</option>

	<option id="genes" type="int" default="10">
            <range min="1"/>
	    <name>genes</name>
	    <name>g</name>
	    <comment>the total number of genes</comment>
	</option>

	<option id="inputs" type="int" default="20">
            <range min="1"/>
	    <name>inputs</name>
	    <name>i</name>
	    <comment>
		the number of total interactions
	    </comment>
	</option>

	<option id="positive" type="double" default="0.5">
            <range min="0.0" max="1.0" />
	    <name>positive</name>
	    <name>p</name>
	    <comment>
		the probability of positive inputs
	    </comment>
	</option>

	<option id="interaction" type="double" default="0.5">
            <range min="0.0" max="1.0" />
	    <name>interaction</name>
	    <name>I</name>
	    <comment>
		the probability of non-additive pairs of inputs
	    </comment>
	</option>

	<option id="rewire" type="double" default="0.1">
            <range min="0.0" max="1.0" />
	    <name>rewire</name>
	    <name>w</name>
	    <comment>
		the probability of rewiring links at random
	    </comment>
	</option>

	<option id="coop" type="double" default="1.0">
            <range min="0.0" />
	    <name>coop</name>
	    <name>c</name>
	    <comment>
		the value of Hill coefficients
	    </comment>
	</option>

	<option id="rates" type="double" default="1.0">
            <range min="0.0" />
	    <name>rates</name>
	    <name>r</name>
	    <comment>
		the value of rate constants
	    </comment>
	</option>

	<option id="constants" type="double" default="1.0">
            <range min="0.0" />
	    <name>constants</name>
	    <name>k</name>
	    <comment>
		the value of inhibition/activation constants
	    </comment>
	</option>

	<option id="seed" type="int">
	    <name>seed</name>
	    <name>s</name>
	    <comment>
		a seed for the random number generator
	    </comment>
	</option>

	<option id="prefix" type="string" default="agn">
	    <name>prefix</name>
	    <name>x</name>
	    <comment>
		Prefix for filenames
	    </comment>
	</option>

	<option id="specific_activation" type="flag">
	    <name>specific-activation</name>
	    <comment>use specific activation kinetics</comment>
	</option>

	<option id="version" type="flag">
	    <name>version</name>
	    <comment>output version information and exit</comment>
	</option>

    </options>
</cloxx>
