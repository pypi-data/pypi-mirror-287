extends layout

block title
  title= _("hector") + " – " + _("webauthn-register-title")

block head_scripts
  script(src="#{url_for('static', filename='js/simplewebauthn-browser@7.2.0.umd.min.js')}")
  script.
    const {startRegistration} = SimpleWebAuthnBrowser

    async function doRegister() {
      let registration
      try {
        registration = await startRegistration(#{options | safe})
      } catch (error) {
        console.error(error)
        return alert('#{_("webauthn-register-failure") | replace("\'", "\\\'") | safe}')
      }

      const response = await fetch('{{ url_for("webauthn.add_credential") }}', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify(registration)
      })

      const data = await response.json()
      if (data && data.verified) {
        alert('#{_("webauthn-register-success")}')
        window.location = '#{url_for("webauthn.login")}'
      } else {
        return alert('#{_("webauthn-register-failure") | replace("\'", "\\\'") | safe}')
      }
    }


block content
  section.section
    .container
      h1.title.is-3= _("webauthn-register-title")

      article.message.is-info
        p.message-body= _("webauthn-register-description")

      script.
        doRegister()
